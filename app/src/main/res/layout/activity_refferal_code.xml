<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/referalFullBg"
    tools:context=".Screens.Activities.RefferalCodeActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/referalBg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/secondBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/common_20_size"
            android:background="@drawable/ic_backarrow"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"

            android:gravity="center"
            android:text="@string/referral"
            android:textColor="@color/white"
            android:textSize="@dimen/common_20_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/referalBg"
                android:orientation="vertical">


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-80dp"
                android:layout_marginRight="25dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/white"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                app:cardCornerRadius="@dimen/common_10_size"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/common_10_size"
                        android:text="@string/referralcodeTxt"
                        android:textColor="@color/referalBg"
                        android:textSize="@dimen/navigation_drawer_title_text"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/common_15_size"
                        android:layout_marginRight="@dimen/common_15_size"
                        android:background="@drawable/dotted_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/common_10_size"
                            android:text="TZF001"
                            android:textSize="@dimen/common_title_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/common_10_size"
                            android:text="@string/tapToCopyTxt"
                            android:textSize="@dimen/common_20_size" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btnShareNow"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_title_size"
                android:backgroundTint="@color/orange"

                android:text="@string/sharenow_text"
                android:textColor="@color/white"
                android:textSize="@dimen/common_20_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_20_size"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/common_10_size"
                    android:layout_marginRight="@dimen/common_10_size"
                    android:background="@drawable/whatsapp" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/common_10_size"
                    android:layout_marginRight="@dimen/common_10_size"
                    android:background="@drawable/facebook" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/common_10_size"
                    android:layout_marginRight="@dimen/common_10_size"
                    android:background="@drawable/twitter" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/common_10_size"
                    android:layout_marginRight="@dimen/common_10_size"
                    android:background="@drawable/linkedin" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/common_10_size"
                    android:layout_marginRight="@dimen/common_10_size"
                    android:background="@drawable/instagram" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10_size"
                android:gravity="center"
                android:padding="@dimen/common_10_size"
                android:text="@string/yourreferralTxt"
                android:textColor="@color/referalBg"
                android:textSize="@dimen/common_20_size"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/common_10_size"
                android:layout_marginRight="25dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/white"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                app:cardCornerRadius="@dimen/common_15_size"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/common_10_size">


                    <RelativeLayout
                        android:id="@+id/sucessfulParticipantLayout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sucessImg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/common_10_size"
                            android:layout_marginRight="@dimen/common_10_size"
                            android:background="@drawable/sucess_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/sucessImg"
                            android:padding="@dimen/common_10_size"
                            android:text="@string/successTxt"
                            android:textSize="@dimen/common_content_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/arrow_right_ic"
                            android:backgroundTint="@color/black" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/black" />

                    <RelativeLayout
                        android:id="@+id/activeParticipantLayout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgActive"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/common_10_size"
                            android:layout_marginRight="@dimen/common_10_size"
                            android:background="@drawable/active_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/imgActive"
                            android:padding="@dimen/common_10_size"
                            android:text="@string/activeTxt"
                            android:textSize="@dimen/common_content_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/arrow_right_ic"
                            android:backgroundTint="@color/black" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/black" />

                    <RelativeLayout
                        android:id="@+id/inactiveParticipantLayout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/inactiveImg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/common_10_size"
                            android:layout_marginRight="@dimen/common_10_size"
                            android:background="@drawable/inactive_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/inactiveImg"
                            android:padding="@dimen/common_10_size"
                            android:text="@string/inactiveTxt"
                            android:textSize="@dimen/common_content_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/arrow_right_ic"
                            android:backgroundTint="@color/black" />

                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/common_30_size"
                android:layout_marginRight="25dp"
                android:gravity="start"
                android:text="@string/noteTxt"
                android:textColor="@color/graytextcolor"
                android:textSize="@dimen/common_15_size"
                android:textStyle="normal" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>