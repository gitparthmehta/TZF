<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screens.Activities.FundraiserActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/secondBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/common_20_size"
            android:background="@drawable/ic_backarrow"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/fundraiserTxt"
            android:textColor="@color/purple"
            android:textSize="@dimen/common_20_size"
            android:textStyle="bold" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="@dimen/common_30_size"
                android:layout_marginTop="@dimen/common_30_size"
                android:layout_marginRight="@dimen/common_30_size"
                android:background="@drawable/fundraiser" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_15_size"
                android:layout_marginTop="@dimen/common_20_size"
                android:layout_marginRight="@dimen/common_15_size"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="YOUR CUSTOMISED LINK"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/common_18_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="( Note: your incentive coins will be directed without any approval)"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/common_16_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_10_size"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/common_25_size"
                        android:layout_weight="1"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/share_ic" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="DONATE DIRECTLY ON THE OFFICIAL TARE ZAMEEN FOUNDATION WEBSITE "
                    android:textColor="@color/orange"
                    android:textSize="@dimen/common_18_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_10_size"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/common_25_size"
                        android:layout_weight="1"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/share_ic" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Please upload yours/ your friends donation screenshots here to claim your reward coins. "
                    android:textColor="@color/purple"
                    android:textSize="@dimen/common_18_size"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/common_15_size"
                    android:layout_marginTop="@dimen/common_20_size"
                    android:layout_marginRight="@dimen/common_15_size"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:divider="@android:color/white"
                    android:dividerHeight="0.0px"
                    android:elevation="8dp"
                    android:outlineAmbientShadowColor="@color/black"
                    android:paddingTop="@dimen/common_20_size"
                    app:cardCornerRadius="50dp"
                    card_view:cardElevation="10dp"
                    card_view:cardPreventCornerOverlap="false">

                    <Button
                        android:id="@+id/btnDonate"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:text="@string/uploadbtn"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/common_20_size" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/common_20_size"
                    android:gravity="start"
                    android:text="REWARD COINS CATEGORIES"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/common_18_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/common_20_size"
                    android:gravity="start"
                    android:text="1. (Upto 10,000 INR): 7% incentive coins after the minimum target."
                    android:textColor="@color/orange"
                    android:textSize="@dimen/common_16_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/common_10_size"
                    android:gravity="start"
                    android:text="2. ( 10,001 INR -20,000):10% incentive coins after the minimum target"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/common_16_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/common_10_size"
                    android:gravity="start"
                    android:text="3. (> 20,001 INR): 15% incentive coins after the minimum target."
                    android:textColor="@color/orange"
                    android:textSize="@dimen/common_16_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="@dimen/common_30_size"
                    android:gravity="center"
                    android:text="*Minimum Target is 7500 INR*"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/common_18_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottombar"
        layout="@layout/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollview"
        android:layout_alignParentBottom="true" />
</RelativeLayout>